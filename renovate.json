{
  "extends": [
    "config:base",
    "group:recommended",
    "group:definitelyTyped",
    "group:testNonMajor",
    "group:linters",
    "group:storybookMonorepo",
    "group:linguiMonorepo",
    "group:babelMonorepo",
    "group:graphqlcodegeneratorMonorepo",
    "group:typescript-eslintMonorepo",
    "group:reactMonorepo"
  ],
  "timezone": "America/New_York",
  "masterIssue": true,
  "separateMinorPatch": true,
  "reviewers": ["chrisw-b"],
  "labels": ["dependency"],
  "assignAutomerge": true,
  "automerge": true,
  "schedule": ["before 3pm on Sunday"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "patch": {
        "groupName": "all patch dependencies",
        "groupSlug": "all-patch"
      }
    },
    {
      "packagePatterns": ["*"],
      "minor": {
        "groupName": "all minor dependencies",
        "groupSlug": "all-minor"
      }
    },
    {
      "packagePatterns": ["^@testing-library"],
      "groupName": "testing-library packages"
    },
    {
      "packagePatterns": ["^jest"],
      "groupName": "jest packages"
    },
    {
      "packagePatterns": ["^stylelint"],
      "groupName": "stylelint packages"
    },
    {
      "packagePatterns": ["^webpack"],
      "groupName": "webpack packages"
    }
  ]
}
